<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          チャット一覧
        </div>
        <div class="card-body">
          <div class="mb-3 text-end">
            <%= button_to '新しいチャットを開始', employees_chats_path, data: { turbo_method: :post }, class: 'btn btn-primary' %>
          </div>
          <% if @chats.present? %>
            <div class="list-group">
              <% @chats.each do |chat| %>
                <%= link_to employees_chat_path(chat), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center text-decoration-none' do %>
                  <span><%= chat_first_message(chat) %></span>
                  <span class="text-muted small"><%= l chat.created_at, format: :long %></span>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-center text-muted my-4">はじめてのチャットを開始しましょう</p>
          <% end %>
        </div>
        <div class="card-footer bg-light text-end">
          <%= link_to 'Configurationに戻る', employees_root_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
