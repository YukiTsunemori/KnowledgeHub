<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6" style="max-width: 500px;">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          ルーム新規作成
        </div>
        <div class="card-body">
          <%= simple_form_for @room do |f| %>
            <%= f.input :room_type_name, label: 'ルームタイプ名' %>
            <%= f.input :square_meters, label: '部屋の面積' %>
            <%= f.input :capacity, label: '最大収容人数' %>
            <%= f.input :bed_type, label: 'ベッドタイプ', placeholder: 'ツイン or キング etc..' %>
            <%= f.input :bed_quantity, label: '客室総数' %>
            <%= f.input :htwn, label: 'ハリウッドツイン仕様' %>
            <div><%= f.collection_select :room_category_id, @categories, :id, :name, label: 'ルームカテゴリー' %></div>
            <div><%= f.collection_select :amenity_group_id, @amenities, :id, :name, label: 'アメニティーグループ' %></div>
            <div class="d-flex justify-content-end mt-3">
              <%= f.submit '送信', class: 'btn btn-primary' %>
              <%= link_to '戻る', employees_configurations_path, class: 'btn btn-danger ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6" style="max-width: 500px;">
      <div class="card mb-4">
        <div class="card-header bg-light">
          登録済みルームリスト一覧
        </div>
        <div class="card-body p-0">
          <ol class="list-group list-group-numbered mb-0">
            <% @room_lists.each do |room| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="text-start w-100"><%= room.room_type_name %></span>
                <div class="d-flex gap-2 ms-2 flex-shrink-0">
                  <%= link_to '編集', edit_room_list_path(room), class: 'btn btn-primary btn-sm' %>
                  <%= button_to '削除', room_list_path(room), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                </div>
              </li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
