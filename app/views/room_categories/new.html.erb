<div class="container py-4" style="max-width: 500px;">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      ルームカテゴリ新規作成
    </div>
    <div class="card-body">
      <%= simple_form_for @room_category do |f| %>
        <%= f.input :name, label: 'カテゴリーネーム' %>
        <div class="d-flex justify-content-end mt-3">
          <%= f.button :submit, '追加', class: 'btn btn-primary' %>
          <%= link_to '戻る', employees_configurations_path, class: 'btn btn-danger ms-2' %>
        </div>
      <% end %>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-light">
      登録済みカテゴリ一覧
    </div>
     <div class="card-body p-0">
      <ol class="list-group list-group-numbered mb-0">
        <% @category_all.each do |category| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="text-start w-100"><%= category.name %></span>
            <div class="d-flex gap-2 ms-2 flex-shrink-0">
              <%= link_to '編集', edit_room_category_path(category), class: 'btn btn-primary btn-sm' %>
              <%= button_to '削除', room_category_path(category), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>


