<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6" style="max-width: 500px;">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          ルーム情報編集
        </div>
        <div class="card-body">
          <%= simple_form_for @roomlist do |f| %>
            <%= f.input :room_type_name, label: 'ルームタイプ名' %>
            <%= f.input :square_meters, label: '部屋の面積' %>
            <%= f.input :capacity, label: '最大収容人数' %>
            <%= f.input :bed_type, label: 'ベッドタイプ', placeholder: 'ツイン or キング etc..' %>
            <%= f.input :bed_quantity, label: '客室総数' %>
            <%= f.input :htwn, label: 'ハリウッドツイン仕様' %>
            <div><%= f.input :room_category_id, collection: RoomCategory.all, label: 'ルームカテゴリー' %></div>
            <div><%= f.input :amenity_group_id, collection: AmenityGroup.all, label: 'アメニティーグループ' %></div>
            <div class="d-flex justify-content-end mt-3">
              <%= f.submit '更新', class: 'btn btn-primary' %>
              <%= link_to '戻る', employees_configurations_path, class: 'btn btn-outline-secondary ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
