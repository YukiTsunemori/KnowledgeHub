<div class="container py-4" style="max-width: 500px;">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      ルームカテゴリ新規作成
    </div>
        <div class="card-body">
        <%= simple_form_for [:employees, @edit_amenity_group] do |f| %>
            <%= f.input :name, label: 'カテゴリーネーム' %>
            <%= f.input :content, label: '内容' %>
            <div class="d-flex justify-content-end mt-3">
            <%= f.button :submit, '更新', class: 'btn btn-primary' %>
            <%= link_to '戻る', new_employees_amenity_group_path, class: 'btn btn-outline-secondary ms-2' %>
            </div>
        <% end %>
        </div>
    </div>
</div>
