<div class="container py-4" style="max-width: 500px;">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      アメニティグループ新規作成
    </div>
    <div class="card-body">
      <%= simple_form_for [:employees, @amenity_group] do |f| %>
        <%= f.input :name, label: 'グループネーム' %>
        <%= f.input :content, label: '内容' %>
        <div class="d-flex justify-content-end mt-3">
          <%= f.button :submit, '追加', class: 'btn btn-primary' %>
          <%= link_to '戻る', employees_root_path, class: 'btn btn-outline-secondary ms-2' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card mb-4">
    <div class="card-header bg-light">
      登録済みグループ一覧
    </div>
    <div class="card-body p-0">
      <ol class="list-group list-group-numbered mb-0">
        <% @group_all.each do |amenity| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="text-start w-100"><%= amenity.name %></span>
            <div class="d-flex gap-2 ms-2 flex-shrink-0">
              <%= link_to '編集', edit_employees_amenity_group_path(amenity), class: 'btn btn-primary btn-sm' %>
              <%= button_to '削除', employees_amenity_group_path(amenity), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
